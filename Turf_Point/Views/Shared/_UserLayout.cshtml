<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rangoonwala Turf</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Gradient background for header and footer */
        .gradient-bg {
            background: linear-gradient(90deg, green, gray, black);
        }

        /* Navbar links color */
        .navbar-dark .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-dark .navbar-nav .nav-link:hover {
            color: #d4edda;
        }

        /* Carousel height fix */
        .carousel-item img {
            height: 500px;
            object-fit: cover;
        }

        /* Prevent horizontal scrollbar */
        body {
            overflow-x: hidden;
            padding-top: 70px;
            padding-bottom: 60px;
        }

        /* Ensure dropdowns don't cause overflow */
        .navbar .dropdown-menu {
            right: 0;
            left: auto;
            min-width: 200px;
            white-space: nowrap;
        }

        /* Footer styling */
        footer {
            color: white;
            padding: 15px;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
        }

        /* Gallery styling */
        .gallery img {
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .gallery img:hover {
            transform: scale(1.05);
        }

        /* Video section */
        .video-section {
            position: relative;
            text-align: center;
        }

        .video-section video {
            width: 100vw;
            height: auto;
            max-height: 80vh;
            object-fit: cover;
            border-radius: 0;
        }

        .status-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 8px 12px;
            border-radius: 20px;
            font-weight: bold;
            color: white;
            background: green;
        }

        .status-offline {
            background: red !important;
        }

        .breadcrumb a {
            color: green;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <!-- Fixed Header Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark gradient-bg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#"><i class="bi bi-ball"></i> Turf Point</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Content("~/")"><i class="bi bi-house-fill me-1"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="guest nav-link" href="@Url.Content("~/Sign-In")"><i class="bi bi-box-arrow-in-right me-1"></i> Sign-In</a>
                    </li>
                    <li class="nav-item">
                        <a class="guest nav-link" href="@Url.Content("~/Sign-Up")"><i class="bi bi-person-plus me-1"></i> Sign-Up</a>
                    </li>

                    <!-- Dropdown Services -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tools me-1"></i> Services
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-basket3 me-1"></i> Cricket Booking</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-football me-1"></i> Football Booking</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-calendar-event me-1"></i> Events</a></li>
                        </ul>
                    </li>

                    <li class="user nav-item">
                        <a class=" nav-link" href="@Url.Content("~/Time-Slots")">
                            <i class="bi bi-calendar-check-fill me-1"></i> Book Time Slot
                        </a>
                    </li>

                    <li class="user nav-item">
                        <a class="user nav-link" href="@Url.Content("~/Bookings")">
                            <i class="bi bi-calendar-check-fill me-1"></i> Bookings
                        </a>
                    </li>


                    <!-- User Dropdown -->
                    <li class="user nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i> Welcome, <script>document.write(localStorage.getItem("UserFullName"));</script>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-key me-1"></i> Change Password</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-1"></i> Profile</a></li>
                            <li><a onclick="confirmLogout()" class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-1"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Fixed Footer -->
    <footer class="gradient-bg">
        <p><i class="bi bi-c-circle me-1"></i> Created by <strong>Parvez Shaikh</strong></p>
    </footer>

    <script>
        if (localStorage.getItem("UserFullName") != null) {
            $(".guest").hide();
            $(".user").show();
        } else {
            $(".user").hide();
            $(".guest").show();
        }

        const confirmLogout = () => {
            if (confirm("Are you sure to logout...!")) {
                localStorage.removeItem("UserFullName");
                localStorage.removeItem("UserId");
                localStorage.removeItem("userToken");
                window.location.href = "@Url.Content("~/")";
            }
        }
    </script>
</body>

</html>
