<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title | TURF RANGOONWALA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/v/dt/dt-2.3.4/datatables.min.css" rel="stylesheet" integrity="sha384-pmGS6IIcXhAVIhcnh9X/mxffzZNHbuxboycGuQQoP3pAbb0SwlSUUHn2v22bOenI" crossorigin="anonymous">
    <script src="https://cdn.datatables.net/v/dt/dt-2.3.4/datatables.min.js" integrity="sha384-X2pTSfom8FUa+vGQ+DgTCSyBZYkC1RliOduHa0X96D060s7Q//fnOh3LcazRNHyo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>

        table td{
            font-size: 11px;
        }

        table th {
            font-size: 14px;
        }

        body {
            margin: 0;
            background-color: #f4f6f9;
        }

        /* Sidebar - SCROLLABLE WHEN OVERFLOW */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 240px;
            background-color: #2f3e46;
            color: white;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease;
            z-index: 1100;
            /* SCROLLABLE MAGIC */
            max-height: 100vh;
            overflow-y: auto;
            overflow-x: hidden;
            scrollbar-width: thin;
        }

        /* Custom Scrollbar */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.5);
        }

        .sidebar-header {
            background-color: #2d6a4f;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 15px;
            font-weight: bold;
            position: sticky;
            top: 0;
            z-index: 10;
            flex-shrink: 0;
        }

        .sidebar-close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1201;
            display: none !important;
        }

        .sidebar-close-btn:hover {
            opacity: 0.8;
        }

        .sidebar-title {
            margin: 0;
            line-height: 1.2;
        }

        /* Scrollable Navigation Area */
        .sidebar-nav {
            flex: 1;
            overflow-y: auto;
            padding: 10px 0;
        }

        .sidebar a {
            color: #d8f3dc;
            padding: 12px 20px;
            text-decoration: none;
            display: block;
            border-left: 3px solid transparent;
            transition: all 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #40916c;
            color: white;
            border-left-color: #52de97;
        }

        /* Dropdown Styles */
        .sidebar-dropdown-toggle {
            position: relative;
        }

        .dropdown-arrow {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            transition: transform 0.3s ease;
            font-size: 12px;
        }

        .sidebar-dropdown-toggle.active .dropdown-arrow {
            transform: translateY(-50%) rotate(180deg);
        }

        .sidebar-dropdown-content {
            max-height: 0;
            overflow: hidden;
            background-color: rgba(64, 145, 108, 0.2);
            transition: max-height 0.3s ease;
        }

        .sidebar-dropdown-content.active {
            max-height: 400px;
        }

        .sidebar-dropdown-content a {
            padding-left: 45px;
            font-size: 0.9em;
            background-color: rgba(255, 255, 255, 0.05);
        }

        .sidebar-footer {
            background-color: #1b4332;
            text-align: center;
            padding: 12px;
            font-size: 14px;
            flex-shrink: 0;
            position: sticky;
            bottom: 0;
            background: linear-gradient(to top, #1b4332, transparent);
        }

        .header {
            position: fixed;
            top: 0;
            left: 240px;
            right: 0;
            height: 60px;
            background-color: #2d6a4f;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 15px;
            z-index: 1001;
            transition: left 0.3s ease;
        }

        .menu-btn {
            font-size: 26px;
            cursor: pointer;
            user-select: none;
            z-index: 1200;
            background: none;
            border: none;
            color: white;
            padding: 0;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            display: none !important;
        }

        .main-content {
            margin-left: 240px;
            margin-top: 60px;
            padding: 20px;
            height: calc(100vh - 60px);
            overflow-y: auto;
            transition: margin-left 0.3s ease;
        }

        /* Header Dropdown */
        .dropdown-toggle {
            text-decoration: none !important;
            box-shadow: none !important;
            border: none !important;
        }

            .dropdown-toggle:hover {
                color: #e8f5e8 !important;
                background: rgba(255, 255, 255, 0.1) !important;
                border-radius: 6px !important;
            }

        .dropdown-menu {
            border-radius: 10px !important;
            border: none !important;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2) !important;
            min-width: 180px;
        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .sidebar
            {
                transform: translateX(-100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .sidebar.show .sidebar-close-btn {
                display: flex !important;
            }

            .menu-btn {
                display: flex !important;
            }

            .header {
                left: 0;
            }

            .main-content {
                margin-left: 0;
            }

        }

        /* GLOBAL SCROLLBAR - 1px width, template color */

        /* Chrome, Edge, Safari */
        *::-webkit-scrollbar {
            width: 0px;
            /* SUPER THIN */
            height: 0px;
            /* for horizontal scrollbars */
        }

        /* Firefox */
        * {
            scrollbar-width: none; /* Hide scrollbar in Firefox */
        }

        /* Optional: for IE/Edge legacy */
        * {
            -ms-overflow-style: none;
        }
    </style>
</head>

<body>

    <!-- SCROLLABLE Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="sidebar-title mb-0">Admin Panel</h5>
            <button class="sidebar-close-btn" onclick="toggleSidebar()">✕</button>
        </div>

        <!-- Scrollable Navigation -->
        <div class="sidebar-nav">
            <a href="@Url.Content("~/Admin/Dashboard")" onclick="autoCloseSidebar()">
                <i class="bi bi-house-door me-2"></i>Dashboard
            </a>

            <a href="@Url.Content("~/Admin/Customers")" onclick="autoCloseSidebar()">
                <i class="bi bi-people me-2"></i>Users
            </a>

            <div class="sidebar-dropdown">
                <a href="#" class="sidebar-dropdown-toggle" onclick="toggleSidebarDropdown(event, 'time-slotes')">
                    <i class="bi bi-calendar-check me-2"></i>Time Slotes
                    <span class="dropdown-arrow">▾</span>
                </a>
                <div class="sidebar-dropdown-content" id="time-slotes">
                    <a href="@Url.Content("~/Admin/Time-Slots")" onclick="autoCloseSidebar()">New Slote</a>
                    <a href="@Url.Content("~/Admin/Todays/Available-Slots")" onclick="autoCloseSidebar()">Today's Available</a>
                    <a href="@Url.Content("~/Admin/Available-Slots")">Available Slotes</a>
                </div>
            </div>


            <!-- Bookings Dropdown -->
            <div class="sidebar-dropdown">
                <a href="#" class="sidebar-dropdown-toggle" onclick="toggleSidebarDropdown(event, 'bookings-dropdown')">
                    <i class="bi bi-calendar-check me-2"></i>Bookings
                    <span class="dropdown-arrow">▾</span>
                </a>
                <div class="sidebar-dropdown-content" id="bookings-dropdown">
                    <a href="@Url.Content("~/Admin/todays-bookings")" onclick="autoCloseSidebar()">Today's Bookings</a>
                    <a href="@Url.Content("~/Admin/upcomming-bookings")" onclick="autoCloseSidebar()">Upcoming Bookings</a>
                    <a href="@Url.Content("~/Admin/complete-bookings")" onclick="autoCloseSidebar()">Completed Bookings</a>
                </div>
            </div>

            <a href="@Url.Content("~/Admin/Payments")" onclick="autoCloseSidebar()">
                <i class="bi bi-people me-2"></i>Payments
            </a>

            <!-- Reports Dropdown -->
            <div class="sidebar-dropdown">
                <a href="#" class="sidebar-dropdown-toggle" onclick="toggleSidebarDropdown(event, 'reports-dropdown')">
                    <i class="bi bi-graph-up me-2"></i>Reports
                    <span class="dropdown-arrow">▾</span>
                </a>
                <div class="sidebar-dropdown-content" id="reports-dropdown">
                    <a href="#daily-report" onclick="autoCloseSidebar()">Daily Report</a>
                    <a href="#monthly-report" onclick="autoCloseSidebar()">Monthly Report</a>
                    <a href="#revenue-report" onclick="autoCloseSidebar()">Revenue Report</a>
                    <a href="#user-report" onclick="autoCloseSidebar()">User Analytics</a>
                </div>
            </div>

            <!-- Settings Dropdown -->
            <div class="sidebar-dropdown">
                <a href="#" class="sidebar-dropdown-toggle" onclick="toggleSidebarDropdown(event, 'settings-dropdown')">
                    <i class="bi bi-gear me-2"></i>Settings
                    <span class="dropdown-arrow">▾</span>
                </a>
                <div class="sidebar-dropdown-content" id="settings-dropdown">
                    <a href="#profile-settings" onclick="autoCloseSidebar()">Profile Settings</a>
                    <a href="#system-settings" onclick="autoCloseSidebar()">System Settings</a>
                    <a href="#payment-settings" onclick="autoCloseSidebar()">Payment Settings</a>
                    <a href="#notification-settings" onclick="autoCloseSidebar()">Notifications</a>
                </div>
            </div>

            <!-- Quick Links Dropdown -->
            <div class="sidebar-dropdown mt-2">
                <a href="#" class="sidebar-dropdown-toggle"
                   onclick="toggleSidebarDropdown(event, 'quicklinks-dropdown')">
                    <i class="bi bi-lightning-charge me-2"></i>Quick Links
                    <span class="dropdown-arrow">▾</span>
                </a>
                <div class="sidebar-dropdown-content" id="quicklinks-dropdown">
                    <a href="#activity-log" onclick="autoCloseSidebar()">Activity Log</a>
                    <a href="#backup-data" onclick="autoCloseSidebar()">Backup Data</a>
                    <a href="#system-status" onclick="autoCloseSidebar()">System Status</a>
                    <a href="#change-password" onclick="autoCloseSidebar()">Change Password</a>
                    <a href="#documentation" onclick="autoCloseSidebar()">Documentation</a>
                </div>
            </div>
        </div>

        <div class="sidebar-footer">
            Rangoonwala Turf
        </div>
    </div>

    <!-- Header -->
    <div class="header">
        <div class="d-flex align-items-center">
            <button class="menu-btn me-3" id="menuBtn" onclick="toggleSidebar()">☰</button>
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>

        <!-- User Dropdown -->
        <div class="dropdown">
            <button class="btn btn-link text-white dropdown-toggle d-flex align-items-center p-0 border-0 bg-transparent text-decoration-none shadow-none"
                    type="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="me-2">Admin</span>
                <span class="fw-bold fs-5">👤</span>
            </button>

            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="accountDropdown">
                <li><a class="dropdown-item px-3 py-2" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                <li><a class="dropdown-item px-3 py-2" href="@Url.Content("~/Admin/Change-Password")"><i class="bi bi-key me-2"></i>Change Password</a></li>
                <li>
                    <hr class="dropdown-divider my-0">
                </li>
                <li>
                    <a class="dropdown-item text-danger px-3 py-2 fw-semibold" href="#">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const menuBtn = document.getElementById("menuBtn");

            const isOpen = sidebar.classList.toggle("show");
            menuBtn.textContent = isOpen ? "✕" : "☰";
        }

        function autoCloseSidebar() {
            const sidebar = document.getElementById("sidebar");
            const menuBtn = document.getElementById("menuBtn");

            if (window.innerWidth <= 768) {
                sidebar.classList.remove("show");
                menuBtn.textContent = "☰";
                // Close all dropdowns
                document.querySelectorAll('.sidebar-dropdown-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.querySelectorAll('.sidebar-dropdown-toggle').forEach(toggle => {
                    toggle.classList.remove('active');
                });
            }
        }

        function toggleSidebarDropdown(event, dropdownId) {
            event.preventDefault();
            event.stopPropagation();

            // Close all other dropdowns
            document.querySelectorAll('.sidebar-dropdown-content').forEach(content => {
                if (content.id !== dropdownId) {
                    content.classList.remove('active');
                    content.parentElement.querySelector('.sidebar-dropdown-toggle').classList.remove('active');
                }
            });

            const dropdownContent = document.getElementById(dropdownId);
            const toggleBtn = event.currentTarget;

            dropdownContent.classList.toggle('active');
            toggleBtn.classList.toggle('active');
        }

        window.addEventListener("resize", () => {
            const sidebar = document.getElementById("sidebar");
            const menuBtn = document.getElementById("menuBtn");

            if (window.innerWidth > 768) {
                menuBtn.textContent = "☰";
                sidebar.classList.remove("show");
                document.querySelectorAll('.sidebar-dropdown-content').forEach(content => {
                    content.classList.remove('active');
                });
                document.querySelectorAll('.sidebar-dropdown-toggle').forEach(toggle => {
                    toggle.classList.remove('active');
                });
            }
        });

        document.addEventListener('click', function (event) {
            if (window.innerWidth > 768) {
                const sidebar = document.getElementById("sidebar");
                if (!sidebar.contains(event.target)) {
                    document.querySelectorAll('.sidebar-dropdown-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    document.querySelectorAll('.sidebar-dropdown-toggle').forEach(toggle => {
                        toggle.classList.remove('active');
                    });
                }
            }
        });
    </script>

</body>

</html>