@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap CSS -->  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            margin: 0;
            background: url('https://images.unsplash.com/photo-1503264116251-35a269479413') no-repeat center center;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 15px;
        }

        .login-card {
            width: 100%;
            max-width: 380px;
            padding: 25px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(12px);
            border-radius: 14px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }

            .login-card h4 {
                text-align: center;
                margin-bottom: 20px;
                color: #fff;
                font-size: 1.4rem;
            }

        .form-control {
            background: rgba(255,255,255,0.9);
            height: 45px;
            font-size: 1rem;
        }

        label.error {
            color: #ffcccc;
            font-size: 0.85rem;
        }

        .btn-login {
            width: 100%;
            height: 45px;
            font-size: 1rem;
            margin-top: 10px;
        }

        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .spinner-box {
            text-align: center;
        }

        @@media (max-width: 360px) {
        .login-card
        {
            padding: 20px;
        }

        .login-card h4 {
            font-size: 1.2rem;
        }

        }
    </style>
</head>
<body>

    <!-- Login Card -->
    <div class="login-card">
        <h4>Login</h4>

        <div class="mb-3">
            <b class="text-white">User Name</b>
            <label id="userError" class="error"></label>
            <input type="text" id="username" class="form-control mt-1" placeholder="Enter username">
        </div>

        <div class="mb-3">
            <b class="text-white">Password</b>
            <label id="passError" class="error"></label>
            <input type="password" id="password" class="form-control mt-1" placeholder="Enter password">
        </div>

        <button class="btn btn-primary btn-login" onclick="validateLogin()">Login</button>
    </div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" style="display:none;">
        <div class="spinner-box">
            <div class="spinner-border text-light" role="status"></div>
            <div class="mt-3 text-white fw-semibold">Please wait...</div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        function validateLogin() {
            let username = $('#username').val().trim();
            let password = $('#password').val().trim();

            let isValid = true;
            $('#userError').text('');
            $('#passError').text('');

            if (username === "") {
                $('#userError').text('Username is required');
                isValid = false;
            }
            if (password === "") {
                $('#passError').text('Password is required');
                isValid = false;
            }

            if (!isValid) return;

            // Show loading overlay
            $('#loadingOverlay').show();

            $.ajax({
                url: '@Url.Content("~/api/Admin/Login")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    Username: username,
                    Password: password
                }),
                success: function (res) {
                    $('#loadingOverlay').hide();

                    if (res.status === "Ok") {
                        // SweetAlert success
                        Swal.fire({
                            icon: 'success',
                            title: 'Login Successful',
                            text: 'Redirecting to dashboard...',
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => {
                            localStorage.setItem('adminUserName', res.results.username);
                            localStorage.setItem('adminId', res.results.adminId);
                            window.location.href = '@Url.Content("~/Admin/Dashboard")';
                        });
                    } else {
                        // SweetAlert error
                        Swal.fire({
                            icon: 'error',
                            title: 'Login Failed',
                            text: res.results || 'Invalid username or password'
                        });
                    }
                },
                error: function (err) {
                    console.log(err);
                    $('#loadingOverlay').hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Error',
                        text: 'Something went wrong. Please try again.'
                    });
                }
            });
        }
    </script>


</body>
</html>
