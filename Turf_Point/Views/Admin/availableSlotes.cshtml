@{
    ViewData["Title"] = "Available Slots";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">Available Slots</h4>
    </div>

    <!-- Date Filter -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Select Date</label>
                    <input type="date" id="slotDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button id="btnSearch" class="btn btn-primary mt-3">
                        <i class="fas fa-search"></i> Show Slots
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- DataTable -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="slotsTable" class="table table-bordered table-hover align-middle w-100">
                    <thead>
                        <tr>
                            <th style="width:60px;">#</th>
                            <th>Slot Time</th>
                            <th>Type</th>
                            <th class="text-end">Rate (₹)</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        // Get today's date in yyyy-mm-dd format
        const today = new Date().toISOString().split('T')[0];

        // Disable past dates
        $('#slotDate').attr('min', today);

        // Set today as default selected date
        $('#slotDate').val(today);

    });
</script>

<script>
    let slotsTable;

    $(document).ready(function () {

        // Set today as default date
        const today = new Date().toISOString().split('T')[0];
        $('#slotDate').val(today);

        // Initialize DataTable
        slotsTable = $('#slotsTable').DataTable({
            ajax: {
                url: getApiUrl(),
                type: 'GET',
                dataSrc: function (json) {
                    return json.status === "OK" ? json.result : [];
                }
            },
            columns: [
                {
                    data: null,
                    className: 'text-center',
                    render: function (data, type, row, meta) {
                        return meta.row + 1;
                    }
                },
                { data: 'timename' },
                { data: 'type' },
                {
                    data: 'rate',
                    className: 'text-end',
                    render: function (data) {
                        return '₹ ' + data;
                    }
                },
                {
                    data: 'status',
                    className: 'text-center',
                    render: function (data) {
                        return data === 'show'
                            ? '<span class="badge bg-success">Available</span>'
                            : '<span class="badge bg-danger">Hidden</span>';
                    }
                }
            ],
            paging: true,
            searching: true,
            ordering: true,
            lengthChange: false,
            pageLength: 10,
            language: {
                emptyTable: "No slots available for selected date"
            }
        });

        // Reload table on button click
        $('#btnSearch').click(function () {
            slotsTable.ajax.url(getApiUrl()).load();
        });
    });

    function getApiUrl() {
        const selectedDate = $('#slotDate').val();
        return `@Url.Content("~/api/TimeSlot/AvailableSlotes?slotDate=")${selectedDate}`;
    }
</script>
