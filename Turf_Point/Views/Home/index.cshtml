</section>

<!-- Contact Section -->
<section id="contact" class="container my-5">
    <h2 class="text-center mb-5 fw-bold" style="color: #2f855a;">Contact Us</h2>

    <div class="row g-4">
        <!-- Contact Info Cards -->
        <div class="col-md-6">
            <div class="row g-3">
                <!-- Location Card -->
                <div class="col-12">
                    <div class="card text-white shadow-sm border-0" style="background: linear-gradient(135deg, #38b000, #6ecf8f);">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-geo-alt-fill fs-2 me-3"></i>
                            <div>
                                <h5 class="card-title fw-bold">Location</h5>
                                <p class="card-text mb-0">Mumbai, India</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Phone Card -->
                <div class="col-12">
                    <div class="card text-white shadow-sm border-0" style="background: linear-gradient(135deg, #219ebc, #8ed1fc);">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-telephone-fill fs-2 me-3"></i>
                            <div>
                                <h5 class="card-title fw-bold">Phone</h5>
                                <p class="card-text mb-0">+91 98765 43210</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Email Card -->
                <div class="col-12">
                    <div class="card text-white shadow-sm border-0" style="background: linear-gradient(135deg, #ff6d00, #ff9e1b);">
                        <div class="card-body d-flex align-items-center">
                            <i class="bi bi-envelope-fill fs-2 me-3"></i>
                            <div>
                                <h5 class="card-title fw-bold">Email</h5>
                                <p class="card-text mb-0">turfpoint@example.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Google Map Embed -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-0">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3770.1000000000004!2d72.877655!3d19.076090!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7c63e4f0a68f1%3A0x2d7f1ed0f3f0b8b!2sMumbai%2C%20Maharashtra%2C%20India!5e0!3m2!1sen!2sin!4v1696260000000!5m2!1sen!2sin"
                            width="100%" height="400" style="border:0; border-radius:10px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #contact h2 {
        position: relative;
    }

        #contact h2::after {
            content: '';
            width: 60px;
            height: 3px;
            background-color: #2f855a;
            display: block;
            margin: 0.5rem auto 0;
            border-radius: 2px;
        }

    #contact .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        #contact .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

        #contact .card i {
            flex-shrink: 0;
        }

        #contact .card .card-title {
            margin-bottom: 0.25rem;
        }
</style>


<script>
    const video = document.getElementById("turfVideo");
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          video.play();
        } else {
          video.pause();
        }
      });
    }, { threshold: 0.5 });

    observer.observe(video);

    // Toggle Online/Offline status
    const statusBadge = document.getElementById("statusBadge");
    // Change this manually when needed:
    let isOnline = true; // set false for offline
    if (!isOnline) {
      statusBadge.textContent = "● Offline";
      statusBadge.classList.add("status-offline");
    }
</script>